# ============================================================
# 账户2配置示例
# ============================================================

# 认证配置（二选一）
# 方式1：钱包私钥（自动生成 Ed25519 密钥对）
# WALLET_PRIVATE_KEY=0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# 方式2：Ed25519 私钥 + 访问令牌
ED25519_PRIVATE_KEY=your_account2_44_char_base58_key_here
ACCESS_TOKEN=your_account2_access_token_here

# ============================================================
# 做市策略参数
# ============================================================
MARKET_MAKER_SYMBOL=BTC-USD
MARKET_MAKER_QTY=0.005
MARKET_MAKER_TARGET_BPS=7.5    # 初始挂单偏离
MARKET_MAKER_MIN_BPS=7.0       # 最小偏离（低于此值重新挂）
MARKET_MAKER_MAX_BPS=9.9       # 最大偏离（超过此值重新挂）

MARKET_MAKER_CHECK_INTERVAL=0.0         # 检查间隔（秒，0 = 无延迟）

# ============================================================
# 日志 & 通知（可选）
# ============================================================
LOG_LEVEL=INFO                          # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Telegram 通知（留空则禁用）
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
REORDER_NOTIFY_THROTTLE_SECONDS=3600    # 重挂通知限流（秒）
